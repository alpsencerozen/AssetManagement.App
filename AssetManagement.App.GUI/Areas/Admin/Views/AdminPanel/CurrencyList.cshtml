
@model List<CurrencyDTO>

@{
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

@section Links {
    <link href="~/templates/startbootstrap-sb-admin-2-gh-pages/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<h3>Admin Panel / System Lists / Currency</h3>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Code
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Operation
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Description
                            </td>
                            <td>
                                Currency
                            </td>
                            <td>
                                <a class="btn btn-warning" href="#" role="button"><i class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-12 ">
            <a class="btn btn-dark" asp-area="Admin" asp-controller="AdminPanel" asp-action="SystemLists">Geri Dön</a>
        </div>
    </div>
</div>


@section Scripts {
    <!-- Page level plugins -->
    <script src="~/templates/startbootstrap-sb-admin-2-gh-pages/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/templates/startbootstrap-sb-admin-2-gh-pages/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/templates/startbootstrap-sb-admin-2-gh-pages/js/demo/datatables-demo.js"></script>
}