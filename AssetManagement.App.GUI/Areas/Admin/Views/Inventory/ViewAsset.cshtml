

@model AssetDTO

@{
    Layout = "~/Views/Shared/_AdminInventoryLayout.cshtml";
}


    <h2>Ürün Kayıt Bilgileri</h2>

    <form action="/" method="post" class="mt-3">
        
        <div class="dropdown show text-right mr-4">
            <a class="btn btn-warning dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-fw fa-list"></i> Aksiyonlar
            </a>

            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item" data-toggle="modal" data-target="#exampleModal">Zimmet Ata</a>
                <a class="dropdown-item" asp-area="User" asp-controller="Inventory" asp-action="AddAssetNoBarcode">Yorum Ekle</a>
            </div>
        </div>

        <div class="form-row mt-3 m-3">
            <div class="form-group col-md-6">
                <label for="inputEmail4">Barkod</label>
                <input type="text" class="form-control" id="urunBarkod" value="@Model.hasBarcode.Value">
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail4">Kayıt No:</label>
                <input type="text" class="form-control" id="urunKayit" value="@Model.RegistrationNumber.Value">
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail4">Şirket Id:</label>
                <input type="text" class="form-control" id="urunSirket" value="@Model.CompanyID">
            </div>
            <div class="form-group col-md-6">
                <label for="inputEmail4">Maliyet:</label>
                <input type="text" class="form-control" id="urunTutar" value="@Model.Cost">
            </div>
            <div class="form-group ">
                <div class="col-md-12 ">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
            </div>
            <div class="form-group ">
                <div class="col-md-12 ">
                    <a class="btn btn-dark" href="/Admin/inventory/getallassets">Geri Dön</a>
                </div>
            </div>
        </div>
    </form>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                 
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>


