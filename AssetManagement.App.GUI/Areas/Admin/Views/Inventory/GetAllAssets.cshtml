
@model IEnumerable<AssetListDTO>

@{
    Layout = "~/Views/Shared/_AdminInventoryLayout.cshtml";
}

<style>
    #actionLink4 {
        font-size: 1.8rem;
    }
</style>

<h3>Varlıklarım</h3>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Register Number
                        </th>
                        <th>
                            Barcode
                        </th>
                        <th>
                            Asset Group
                        </th>
                        <th>
                            Asset Type
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Brand
                        </th>
                        <th>
                            Model
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a href="/admin/inventory/viewasset/@item.ID">@item.RegistrationNumber</a>
                            </td>
                            <td>
                                @item.Barcode
                            </td>
                            <td>
                                @item.AssetGroupName
                            </td>
                            <td>
                                @item.AssetTypeName
                            </td>
                            <td>
                                @item.Price.ToString("F")
                            </td>
                            <td>
                                @item.Brand
                            </td>
                            <td>
                                @item.Model
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section Scripts {
    <!-- Page level plugins -->
    <script src="~/templates/startbootstrap-sb-admin-2-gh-pages/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/templates/startbootstrap-sb-admin-2-gh-pages/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/templates/startbootstrap-sb-admin-2-gh-pages/js/demo/datatables-demo.js"></script>
}


